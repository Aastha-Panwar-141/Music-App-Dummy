

<div class="container mt-5">
<h1 class="text-center">All artists</h1>

<table>
  <thead>
    <tr>
      <th>Username</th>
      <th>Email</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @artists.each do |artist| %>
      <tr>
        <td><%= artist.username %></td>
        <td><%= artist.email %></td>
        <td><%= button_to "Follow", follow_follow_path(artist), method: :post %></td>
        <td><%= button_to "Unfollow", unfollow_follow_path(artist), method: :post %></td>
        <td><%# link_to "Show", user %></td>
        <td><%# link_to "Edit", edit_album_path(album) %></td>
        <td><%# button_to "Destroy", album_path(album), method: :delete, data:{confirm: 'Are you sure?'} %></td>
        <td><%# link_to "Destroy", album, data: { turbo_method: :delete, turbo_confirm: "Are you sure?" } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>


