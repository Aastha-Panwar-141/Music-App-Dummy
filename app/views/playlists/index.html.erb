<div class = "container songs-container">
<h4 class = "text-center mt-5">All Playlist</h4>
<table>
  <thead>
    <tr>
      <th>Title</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @playlists.each do |playlist| %>
      <tr>
        <td><%= playlist.title %></td>
        <td><%= link_to "Show", playlist %></td>
        <td><%= link_to "Edit", edit_playlist_path(playlist) %></td>
        <td><%= link_to "Destroy", playlist, data: { turbo_method: :delete, turbo_confirm: "Are you sure?" } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
