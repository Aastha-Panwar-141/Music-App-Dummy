<div class="container mt-4">
<%# <h1>Showing a album</h1> %>
<% if @album.present? %>
<% if @album.album_image.attached? %>
    <%= image_tag @album.album_image, style: 'max-height: 100px' %>
<% end %>
<h1><%= @album.title %></h1>
<h5>Songs</h5>
<ul>
<% @album.songs.each do |song| %>
    <li><%= link_to song.title, song_path(song) %></li>
<% end %>
</ul>
<%= link_to 'Edit', edit_album_path(@album) %><br>
<% end %>
<%= link_to 'Back', albums_path, class: "btn btn-secondary" %>

</div>
