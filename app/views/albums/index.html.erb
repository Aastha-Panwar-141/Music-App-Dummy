<div class = "container songs-container">
<h4 class = "text-center mt-5">All Albums</h4>
<table>
  <thead>
    <tr>
      <th>Title</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @albums.each do |album| %>
      <tr>
        <td><%= album.title %></td>
        <td><%= link_to "Show", album %></td>
        <td><%= link_to "Edit", edit_album_path(album) %></td>
        <td><%= link_to "Destroy", album, data: { turbo_method: :delete, turbo_confirm: "Are you sure?" } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
