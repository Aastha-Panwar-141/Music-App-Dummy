<%= form_with(model: @album) do |album| %>
    <% if @album.errors.any? %>
    <div id= "errors">
    <h2>Errors:</h2>
    <ul>
    <% @album.errors.full_messages.each do |message| %>
    <li><%= message %></li>
    <% end %>
    </ul>
    </div>
    <% end %>

    <div class="field">
    <%= album.label :title %>
    <%= album.text_field :title %>
    </div>

    <div class="field">
    <%= album.label :image %>
    <%= album.file_field :album_image %>
    </div>

    <div class="field">
    <%= album.submit %>
    </div>
<% end %>