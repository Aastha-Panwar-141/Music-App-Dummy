<h1>Search Song</h1>
<%= form_tag(search_songs_path, method: :get) %>
<%= text_field_tag :query, params[:query] %>
<%= submit_tag "Search" %>
<% end %>

<% if @result.present? %>
<h2>Search Results</h2>
<% result.each do |song| %>
<%= song.title %>
<% end %>
<% else %>
<p>No results found.</p>
<% end %>